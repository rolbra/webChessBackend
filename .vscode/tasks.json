{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build app",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/handles.cpp",
                "${workspaceFolder}/gameData.cpp",
                "${workspaceFolder}/figure.cpp",
                "${workspaceFolder}/figureMover.cpp",
                "-o",
                "${workspaceFolder}/build_Ubuntu64/chessServer.exe",
                "-lboost_system",
                "-lcrypto",
                "-lssl",
                "-lcpprest"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build tests",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/tests/*",
                "-o",
                "${workspaceFolder}/build_Ubuntu64/chessServerTests.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ],
    "version": "2.0.0"
}